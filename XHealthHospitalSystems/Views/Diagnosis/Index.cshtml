@model IEnumerable<XHealthHospitalSystems.Models.Diagnosis>

@{
    ViewData["Title"] = "Index";
}

<h1>Diagnosis Details</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symtoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosiss)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedsPres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestsPres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.PatientId)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symtoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosiss)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedsPres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestsPres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.PatientId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiagnosisId"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.DiagnosisId" class="text-warning ml-1"><i class="fas fa-info-circle fa-lg"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.DiagnosisId" class="text-danger ml-1"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
